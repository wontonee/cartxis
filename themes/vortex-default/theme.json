{
    "name": "Vortex Default",
    "slug": "vortex-default",
    "description": "The default Vortex Commerce theme with clean, modern design built with Tailwind CSS and Vue 3.",
    "version": "1.0.0",
    "author": "Vortex Team",
    "author_url": "https://vortex-commerce.com",
    "screenshot": "screenshot.png",
    "is_default": true,
    "supports": [
        "widgets",
        "menus",
        "custom-logo",
        "custom-colors",
        "responsive",
        "dark-mode"
    ],
    "settings": {
        "colors": {
            "primary": "#3b82f6",
            "secondary": "#8b5cf6",
            "accent": "#f59e0b",
            "success": "#10b981",
            "danger": "#ef4444",
            "warning": "#f59e0b",
            "info": "#3b82f6"
        },
        "typography": {
            "font_family": "Inter, sans-serif",
            "font_size": "16px",
            "heading_font": "Inter, sans-serif"
        },
        "layout": {
            "container_width": "1280px",
            "sidebar_width": "300px",
            "header_style": "default",
            "footer_style": "default"
        },
        "features": {
            "sticky_header": true,
            "back_to_top": true,
            "wishlist": true,
            "quick_view": true,
            "product_zoom": true
        }
    }
}
